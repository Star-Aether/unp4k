<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:unp4k.Pages"
             x:Class="unp4k.Pages.TerminalPage"
             x:DataType="local:TerminalOutput"
             Title="">

    <ScrollView Margin="0" BackgroundColor="Black">
        <CollectionView ItemsSource="{Binding Out}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:TermOut">
                    <Label Text="{Binding Output}" TextColor="White" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>